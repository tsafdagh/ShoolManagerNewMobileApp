<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="3"
    android:padding="8dp">

    <ImageView
        android:id="@+id/id_row_itemNote_student_image"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="0.2"
        android:src="@drawable/user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:paddingStart="10dp">


            <TextView
                android:id="@+id/id_row_itemNote_student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom complet"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_row_itemNote_student_matricule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_2dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="MATRICULE" />
            <TextView
                android:id="@+id/id_row_itemNote_student_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_2dp"
                android:text="H" />
            <TextView
                android:id="@+id/id_row_itemNote_student_salle_classe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_2dp"
                android:text="6eme" />
        </LinearLayout>
        <TextView
            android:id="@+id/id_row_itemNote_Note_eleve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#338337"
            android:text="17"
            android:textSize="@dimen/dim_25sp"/>

        <TextView
            android:id="@+id/id_row_itemNote_code_matiere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginStart="5dp"
            android:text="ECM"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>